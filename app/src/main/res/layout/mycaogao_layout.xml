<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_id"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/statue"
        android:minHeight="?attr/actionBarSize"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <LinearLayout
                android:id="@+id/sets_back_id"
                android:layout_width="100px"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/fanhui3x"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_title_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="我的草稿"
                android:textSize="34px"
                android:textColor="#f7f7f9"
                />
            <TextView
                android:id="@+id/tv_filter_id"
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="筛选"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:paddingLeft="87px"
                android:textSize="34px"
                android:textColor="#fafafa"
                />
            <TextView
                android:id="@+id/tv_tiwen_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="提问"
                android:textSize="34px"
                android:visibility="gone"
                android:textColor="#fafafa"
                android:layout_marginRight="45px"
                />
            <TextView
                android:id="@+id/tv_share_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="分享"
                android:gravity="center_vertical"
                android:textSize="34px"
                android:visibility="gone"
                android:textColor="#fafafa"
                android:paddingRight="45px"
                />
            <TextView
                android:id="@+id/tv_fabuzhishidian_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="发布知识点"
                android:textSize="34px"
                android:visibility="gone"
                android:textColor="#fafafa"
                android:layout_marginRight="45px"
                />
            <TextView
                android:id="@+id/tv_push_info_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="我要发布"
                android:textSize="34px"
                android:visibility="gone"
                android:textColor="#fafafa"
                android:layout_marginRight="45px"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <WebView
        android:id="@+id/mWebview_id"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:scrollbars= "none"
        android:layout_weight="1"
        />
</LinearLayout>