<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:fitsSystemWindows="true">
    <!--引用toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#06c1ae"
        android:minHeight="?android:attr/actionBarSize"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <LinearLayout
                android:id="@+id/set_back_id"
                android:layout_width="100px"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/fanhui3x"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="修改个人信息"
                android:textSize="34px"
                android:textColor="#fafafa"
                />
            <TextView
                android:id="@+id/tv_baocun_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="保存"
                android:textSize="34px"
                android:textColor="#fafafa"
                android:layout_marginRight="45px"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:background="#fafafa">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        android:layout_marginTop="40px"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_touxiang_id"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal"
        android:background="@drawable/enable_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="50px"
            android:text="我的头像"
            android:textSize="28px"
            android:textColor="#333"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_touxiang_id"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:src="@mipmap/morentouxiang3x"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80px"/>
        <ImageView
            android:id="@+id/iv_3_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gengduo2x"
            android:layout_marginRight="45px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
     <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9d9d9"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        android:layout_marginTop="40px"
        />
    <!--昵称-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:background="@drawable/enable_selector">
        <EditText
            android:id="@+id/et_nickNime_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50px"
            android:hint="请输入您的个人昵称"
            android:textSize="28px"
            android:background="@null"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        android:layout_marginLeft="50px"/>
    <!--姓名-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:background="@drawable/enable_selector">
        <EditText
            android:id="@+id/et_Name_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50px"
            android:hint="请输入您的姓名"
            android:textSize="28px"
            android:background="@null"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        android:layout_marginLeft="50px"/>
    <!--性别-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_sex_id"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:background="@drawable/enable_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="50px"
            android:text="性别"
            android:textSize="28px"
            android:textColor="#333"/>
        <TextView
            android:id="@+id/et_Sex_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:textColor="#666"
            android:text="男"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/g3"
            android:layout_marginRight="20px"/>
        <ImageView
            android:id="@+id/g3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gengduo2x"
            android:layout_marginRight="45px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        android:layout_marginLeft="50px"/>
    <!--出生年月-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_brith_id"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:background="@drawable/enable_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="50px"
            android:text="出生年月"
            android:textSize="28px"
            android:textColor="#333"/>
        <TextView
            android:id="@+id/et_birth_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:text="1994-05-24"
            android:textColor="#666"
            android:hint="请输入"
            android:textColorHint="@color/lightgrey"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/g4"
            android:layout_marginRight="20px"/>
        <ImageView
            android:id="@+id/g4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gengduo2x"
            android:layout_marginRight="45px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        android:layout_marginLeft="50px"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_skill_id"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:background="@drawable/enable_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="50px"
            android:text="我的技能"
            android:textSize="28px"
            android:textColor="#333"/>
        <ImageView
            android:id="@+id/g5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gengduo2x"
            android:layout_marginRight="45px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        android:layout_marginLeft="50px"/>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/et_Skill_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:paddingTop="20px"
        android:paddingLeft="20px"
        app:gravity="left"
        />
        </LinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>