<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:fitsSystemWindows="true">
    <android.support.v7.widget.Toolbar
        android:layout_height="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/statue"
        android:minHeight="?attr/actionBarSize"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <LinearLayout
                android:id="@+id/sets_back_id"
                android:layout_width="100px"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/fanhui3x"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_titles_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="写摘要"
                android:textSize="34px"
                android:gravity="center"
                android:textColor="#f7f7f9"
                />
            <TextView
                android:id="@+id/tv_xiezhaiyao_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="提交"
                android:textSize="34px"
                android:textColor="#fafafa"
                android:layout_marginRight="45px"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/et_write_zy_id"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:gravity="top"
        android:background="#fafafa"
        android:hint="写摘要，赢积分"
        android:paddingTop="38px"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:textSize="28px"
        android:maxLength="200"
        android:lineSpacingExtra="5px"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/guangbiao"
        android:layout_marginTop="20px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"/>
    <TextView
        android:id="@+id/tv_show_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您还可以输入200字"
        android:layout_marginLeft="60px"/>
</LinearLayout>