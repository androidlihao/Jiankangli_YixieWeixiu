<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:fitsSystemWindows="true">
    <!--引用toolbar-->
    <include
        layout="@layout/widget_layout"
        android:id="@+id/toolbar" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        android:layout_marginTop="40px"
        />
    <!--修改密码-->
    <RelativeLayout
        android:id="@+id/change_pwd_id"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:background="@drawable/enable_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="50px"
            android:text="修改密码"
            android:textSize="28px"
            android:textColor="#333"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gengduo2x"
            android:layout_marginRight="45px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        android:layout_marginLeft="50px"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        android:layout_marginTop="65px"
        />
    <!--意见反馈-->
    <RelativeLayout
        android:id="@+id/rl_yijian_id"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:background="@drawable/enable_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="50px"
            android:text="意见反馈"
            android:textSize="28px"
            android:textColor="#333"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gengduo2x"
            android:layout_marginRight="45px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        android:layout_marginLeft="50px"/>
    <!--关于我们-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:id="@+id/rl_aboutWe_id"
        android:background="@drawable/enable_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="50px"
            android:text="关于我们"
            android:textSize="28px"
            android:textColor="#333"/>
        <ImageView
            android:id="@+id/iv_1_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gengduo2x"
            android:layout_marginRight="45px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        android:layout_marginLeft="50px"/>
    <!--清除缓存的按钮-->
    <RelativeLayout
        android:id="@+id/rl_cleanCache_id"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:visibility="gone"
        android:background="@drawable/enable_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:text="清理缓存"
            android:textSize="28px"
            android:textColor="#333"/>
        <TextView
            android:id="@+id/tv_cache_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:textColor="#666"
            android:text="11.2MB"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_2_id"
            android:layout_marginRight="20px"/>
        <ImageView
            android:id="@+id/iv_2_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gengduo2x"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45px"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        />
    <TextView
        android:id="@+id/tv_exit_id"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginBottom="210px"
        android:layout_marginTop="270px"
        android:background="@drawable/enable_selector"
        android:text="退出"
        android:textColor="#333333"
        android:textSize="28px"
        android:gravity="center"/>
</LinearLayout>