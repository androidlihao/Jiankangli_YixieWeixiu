<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:fitsSystemWindows="true">
    <!--引用toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#06c1ae"
        android:minHeight="?android:attr/actionBarSize"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/yj_back_id"
                android:layout_width="100px"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/fanhui3x"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="意见反馈"
                android:textSize="34px"
                android:textColor="#fafafa"
                />
            <TextView
                android:id="@+id/tv_tijiao_id"
                android:layout_width="158px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="提交"
                android:gravity="center"
                android:textSize="34px"
                android:textColor="#fafafa"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:background="#fafafa"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_yijian_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="28px"
            android:layout_marginTop="30px"
            android:layout_marginLeft="45px"
            android:layout_marginRight="45px"
            android:textColorHint="#8598bf"
            android:gravity="top"
            android:text=""
            android:hint="写下问题和建议，我们将为你不断改进"
            android:background="#fafafa"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#fafafa"
        android:orientation="horizontal"
        android:layout_marginTop="20px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="45px"
            android:text="联系方式:"/>
        <EditText
            android:id="@+id/et_yijianphone_id"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            android:hint="请输入您的手机号"
            android:textColorHint="#8598bf"
            android:textSize="28px"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>