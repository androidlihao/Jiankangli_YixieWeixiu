<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hs.jiankangli_example1.MainActivity"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/toolbar_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_height="?android:attr/actionBarSize"
            android:layout_width="match_parent"
            android:background="@color/statue"
            android:minHeight="?attr/actionBarSize"
            >
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                >
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/al_seek_id"
                    android:layout_width="100px"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="44px"
                        android:layout_height="44px"
                        android:src="@mipmap/sousuo3x"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/sets_back_id"
                    android:layout_width="100px"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/fanhui3x"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
                <TextView
                    android:id="@+id/tv_title_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="医械维修助手"
                    android:textSize="38px"
                    android:textColor="#f7f7f9"
                    />
                <TextView
                    android:id="@+id/tv_ask_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="提问"
                    android:textSize="34px"
                    android:visibility="gone"
                    android:textColor="#fafafa"
                    android:layout_marginRight="45px"
                    />
                <TextView
                    android:id="@+id/tv_share_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="分享"
                    android:gravity="center_vertical"
                    android:textSize="34px"
                    android:visibility="gone"
                    android:textColor="#fafafa"
                    android:paddingRight="45px"
                    />
                <TextView
                    android:id="@+id/tv_push_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="发布知识点"
                    android:textSize="34px"
                    android:visibility="gone"
                    android:textColor="#fafafa"
                    android:layout_marginRight="45px"
                    />
                <TextView
                    android:id="@+id/tv_push_info_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="我要发布"
                    android:textSize="34px"
                    android:visibility="gone"
                    android:textColor="#fafafa"
                    android:layout_marginRight="45px"
                    />
                <ImageView
                    android:id="@+id/iv_bell_id"
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="44px"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/hide_bell"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>
        </android.support.v7.widget.Toolbar>
    </RelativeLayout>
    <!--占位控件-->
    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>
    <RadioGroup
        android:id="@+id/navigation_btn"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:background="#F1F1F1"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/btn_home_id"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/tab_home_btn"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="#F1F1F1"
            android:layout_margin="1dip"
            android:singleLine="true"
            android:gravity="center"
            android:paddingTop="2dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:id="@+id/btn_ower_id"
            android:button="@null"
            android:drawableTop="@drawable/tab_selfinfo_btn"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="#F1F1F1"
            android:paddingTop="2dp"
            android:layout_margin="1dip"
            android:singleLine="true"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400px"/>
    </RadioGroup>
</LinearLayout>
