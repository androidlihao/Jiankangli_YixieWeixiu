<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:background="#f7f7f9">
        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/seek3x"
            android:layout_marginLeft="60px"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_keyword_id"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="70px"
            android:layout_gravity="center_vertical"
            android:hint="选取分类并输入关键字搜索更精准"
            android:textSize="28px"
            android:layout_marginLeft="15px"
            android:background="@null"
            android:textColorHint="#999"
            />
        <TextView
            android:id="@+id/tv_goback_id"
            android:layout_width="146px"
            android:layout_height="match_parent"
            android:text="返回"
            android:textSize="28px"
            android:gravity="center"
            android:textColor="#333"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#999"/>
    <RadioGroup
        android:id="@+id/rg_zwx_id"
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/btn_z_id"
            style="@style/zwd_style"
            android:layout_margin="10dp"
            android:background="@drawable/knowledge_select"
            />
        <!--android:background="@drawable/ask_select"-->
        <RadioButton
            android:id="@+id/btn_w_id"
            style="@style/zwd_style"
            android:background="@drawable/ask_select"
            android:layout_margin="10dp"/>
        <!--android:background="@drawable/info_select"-->
        <RadioButton
            android:id="@+id/btn_x_id"
            style="@style/zwd_style"
            android:visibility="gone"
            android:background="@drawable/info_select"
            android:layout_margin="10dp"/>
        <RadioButton
            android:id="@+id/btn_p_id"
            style="@style/zwd_style"
            android:visibility="visible"
            android:text="配"
            android:textSize="20sp"
            android:gravity="center"
            android:typeface="normal"
            android:background="@drawable/parts_select"
            android:layout_margin="10dp"/>
    </RadioGroup>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_changshang_id"
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:layout_marginLeft="50px"
                android:layout_marginBottom="40px"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70px"
                    android:layout_height="match_parent"
                    android:src="@mipmap/pinpai"/>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <RadioGroup
                        android:id="@+id/rg_firm1_id"
                        android:layout_width="match_parent"
                        android:layout_height="125px"
                        android:layout_marginRight="50px"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/firm_select"
                            />

                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/firm_select"
                            />

                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/firm_select"
                            />
                    </RadioGroup>
                    <RadioGroup
                        android:id="@+id/rg_firm2_id"
                        android:layout_width="match_parent"
                        android:layout_height="125px"
                        android:layout_marginRight="50px"
                        android:layout_marginTop="2px"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/rg_firm1_id"
                        android:orientation="horizontal">
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/firm_select"
                            />
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/firm_select"
                            />
                        <Button
                            style="@style/select_btn"
                            android:background="@color/white"
                            />
                    </RadioGroup>
                    <de.hdodenhof.circleimageview.CircleImageView
                        style="@style/CircleImageView_yuan"/>
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_chanping_id"
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:layout_marginLeft="50px"
                android:layout_marginBottom="40px"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70px"
                    android:layout_height="match_parent"
                    android:src="@mipmap/product_bule_3x"/>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <RadioGroup
                        android:id="@+id/rg_product1_id"
                        android:layout_width="match_parent"
                        android:layout_height="125px"
                        android:layout_marginRight="50px"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/product_select"
                            />

                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/product_select"
                            />

                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/product_select"
                            />
                    </RadioGroup>
                    <RadioGroup
                        android:id="@+id/rg_product2_id"
                        android:layout_width="match_parent"
                        android:layout_height="125px"
                        android:layout_marginRight="50px"
                        android:layout_marginTop="2px"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/rg_product1_id"
                        android:orientation="horizontal">
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/product_select"
                            />
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/product_select"
                            />
                        <Button
                            style="@style/select_btn"
                            android:background="@drawable/product_select"
                            />
                    </RadioGroup>
                    <de.hdodenhof.circleimageview.CircleImageView
                        style="@style/CircleImageView_yuan"/>
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_neirong_id"
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:layout_marginLeft="50px"
                android:layout_marginBottom="40px"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70px"
                    android:layout_height="match_parent"
                    android:src="@mipmap/content_bule_3x"/>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <RadioGroup
                        android:id="@+id/rg_content1_id"
                        android:layout_width="match_parent"
                        android:layout_height="125px"
                        android:layout_marginRight="50px"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/content_select"
                            />
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/content_select"
                            />
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/content_select"
                            />
                    </RadioGroup>
                    <RadioGroup
                        android:id="@+id/rg_content2_id"
                        android:layout_width="match_parent"
                        android:layout_height="125px"
                        android:layout_marginRight="50px"
                        android:layout_marginTop="2px"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/rg_content1_id"
                        android:orientation="horizontal">
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/content_select"
                            />
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/content_select"
                            />
                        <Button
                            style="@style/select_btn"
                            android:background="@color/white"
                            />
                    </RadioGroup>
                    <de.hdodenhof.circleimageview.CircleImageView
                        style="@style/CircleImageView_yuan"/>
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_city_id"
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:layout_marginLeft="50px"
                android:layout_marginBottom="40px"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70px"
                    android:layout_height="match_parent"
                    android:src="@mipmap/diqu"/>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <RadioGroup
                        android:id="@+id/rg_city1_id"
                        android:layout_width="match_parent"
                        android:layout_height="125px"
                        android:layout_marginRight="50px"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/city_selector"
                            />
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/city_selector"
                            />
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/city_selector"
                            />
                    </RadioGroup>
                    <RadioGroup
                        android:id="@+id/rg_city2_id"
                        android:layout_width="match_parent"
                        android:layout_height="125px"
                        android:layout_marginRight="50px"
                        android:layout_marginTop="2px"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/rg_city1_id"
                        android:orientation="horizontal">
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/city_selector"
                            />
                        <RadioButton
                            style="@style/select_btn"
                            android:background="@drawable/city_selector"
                            />
                        <Button
                            style="@style/select_btn"
                            android:background="@color/white"
                            />
                    </RadioGroup>
                    <de.hdodenhof.circleimageview.CircleImageView
                        style="@style/CircleImageView_yuan"/>
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <Button
                android:id="@+id/btn_seek_id"
                android:layout_width="180px"
                android:layout_height="60px"
                android:text="搜索"
                android:textColor="#fafafa"
                android:layout_marginTop="65px"
                android:background="@drawable/fabu_button_shape"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>