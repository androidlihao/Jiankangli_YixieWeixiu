<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:fitsSystemWindows="true"
    >
    <android.support.v7.widget.Toolbar
        android:layout_height="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/statue"
        android:minHeight="?attr/actionBarSize"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/sets_back_id"
                android:layout_width="100px"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/fanhui3x"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="登录"
                android:textSize="34px"
                android:textColor="#f7f7f9"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="201px"
        android:orientation="horizontal"
        android:layout_marginTop="120px">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_height="200px"
            android:layout_weight="1"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="@drawable/login_shape"
            android:orientation="vertical">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="88px"
                    android:layout_height="match_parent"
                    android:text="账号："
                    android:textColor="#333"
                    android:textSize="28px"
                    android:layout_marginLeft="35px"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/et_number_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:gravity="center_vertical"
                    android:textColorHint="#999"
                    android:textSize="28px"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d9d9d9"
                android:layout_marginLeft="88px"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="88px"
                    android:layout_height="match_parent"
                    android:text="密码："
                    android:textColor="#333"
                    android:textSize="28px"
                    android:layout_marginLeft="35px"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/et_pwd_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:textColorHint="#999"
                    android:gravity="center_vertical"
                    android:textSize="28px"/>
            </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal"
        android:layout_marginTop="100px"
        >
       <Button
           android:id="@+id/btn_login"
           android:layout_width="0dp"
           android:layout_height="80px"
           android:layout_weight="1"
           android:textColor="#fafafa"
           android:textSize="28px"
           android:text="登录"
           android:background="@drawable/login_button_shape"
           android:layout_marginLeft="75px"
           android:layout_marginRight="75px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginTop="50px">
        <TextView
            android:id="@+id/tv_forgets_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="忘记密码？"
            android:textSize="24px"
            android:textColor="#666"
            android:gravity="center"
            android:layout_marginLeft="110px"
            />
        <TextView
            android:id="@+id/tv_register_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="注册账号"
            android:textSize="24px"
            android:textColor="#666"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="110px"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>